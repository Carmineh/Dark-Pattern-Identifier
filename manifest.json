  {
    "name": "Dark Pattern",
    "version": "0.1.0",
    "description": "Estensione per l'individuazione di Dark pattern",
    "manifest_version": 3,
    
    "permissions": ["activeTab", "tabs", "scripting", "storage"],
    "host_permissions": ["https://*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "main.html"
    }
}